<?xml version="1.0" encoding="utf-8"?>

<!--<layout xmlns:android="http://schemas.android.com/apk/res/android">-->

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="@dimen/adapter_item_width"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@color/gray_marker"

        android:paddingBottom="@dimen/devices_detail_vertical_padding"
        android:paddingEnd="@dimen/devices_detail_horizontal_padding"
        android:paddingLeft="@dimen/devices_detail_horizontal_padding"
        android:paddingRight="@dimen/devices_detail_horizontal_padding"
        android:paddingStart="@dimen/devices_detail_horizontal_padding"
        android:paddingTop="@dimen/devices_detail_vertical_padding">

        <include
            android:id="@+id/device_details_display_info"
            layout="@layout/device_details_display"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <include
            android:id="@+id/device_details_display_settings"
            layout="@layout/device_details_settings"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"/>

    </LinearLayout>
<!--</layout>-->