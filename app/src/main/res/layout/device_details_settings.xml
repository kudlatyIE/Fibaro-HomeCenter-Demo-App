<?xml version="1.0" encoding="utf-8"?>


    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/device_details_settings"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.Guideline
            android:id="@+id/horizontal_middle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5"
            tools:layout_editor_absoluteX="192dp"
            tools:layout_editor_absoluteY="0dp"/>

        <TextView
            android:id="@+id/device_details_settings_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="@dimen/fibaro_medium_padding"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:text="Set a new value"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/device_details_settings_image_value"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/shape_rectangle_stroke"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/horizontal_middle2"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/device_details_settings_text_display_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:text="99"
            app:layout_constraintBottom_toBottomOf="@+id/device_details_settings_image_value"
            app:layout_constraintEnd_toEndOf="@+id/device_details_settings_image_value"
            app:layout_constraintStart_toStartOf="@+id/device_details_settings_image_value"
            app:layout_constraintTop_toTopOf="@+id/device_details_settings_image_value" />

        <Switch
            android:id="@+id/device_details_settings_switch_binary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/horizontal_middle2"
            app:layout_constraintTop_toTopOf="parent" />

        <NumberPicker
            android:id="@+id/device_details_settings_picker_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/horizontal_middle2"
            app:layout_constraintTop_toTopOf="parent"
            />


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/device_details_settings_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            android:clickable="true"
            android:src="@drawable/ic_done_black_24dp"
            android:tint="#FFFFFF"
            app:backgroundTint="@color/colorFabGreen"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


    </android.support.constraint.ConstraintLayout>
